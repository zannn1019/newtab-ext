{
  "manifest_version": 3,
  "name": "Zan",
  "version": "1.0.0",
  "description": "A minimalist Japanese-inspired homepage with live market tickers, zen quotes, and fluid GSAP transitions.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "history", "identity"],
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://api.binance.com/*",
    "https://fapi.binance.com/*",
    "https://api.spotify.com/*",
    "https://accounts.spotify.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  "action": {
    "default_title": "Zan"
  }
}
